{
  "name": "jscode-runner",
  "version": "0.0.1",
  "description": "Run javascript code and show the result.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"electron --inspect=5858 ./\" \"vite serve ./src/app\"",
    "build": "rimraf dist && vite build ./src/app --outDir dist/web --base ./ && electron-builder",
    "build:monaco": "rimraf src/app/monaco/* && npx rollup -c"
  },
  "repository": "https://github.com/lovetingyuan/js-code-runner",
  "keywords": [
    "JavaScript",
    "Typescript",
    "code",
    "run",
    "runner",
    "execute",
    "Electron",
    "Nodejs",
    "inspect"
  ],
  "author": "tingyuan",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "monaco-editor": "^0.20.0",
    "normalize.css": "^8.0.1",
    "serialize-javascript": "^3.0.0",
    "split.js": "^1.5.11",
    "vue": "^3.0.0-beta.14"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.0.0-beta.14",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1",
    "postcss-url": "^8.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-postcss": "^3.1.1",
    "vite": "^0.16.0"
  },
  "build": {
    "appId": "me.tingyuan.jscoderunner",
    "productName": "jscoderunner",
    "win": {
      "target": {
        "target": "nsis"
      }
    },
    "directories": {
      "output": "dist",
      "app": "./"
    },
    "files": [
      "dist/web/**/*",
      "package.json",
      "main.js",
      "preload.js"
    ]
  },
  "moduleTransformMap": {
    "serialize-javascript/index.js": "commonjs"
  }
}
